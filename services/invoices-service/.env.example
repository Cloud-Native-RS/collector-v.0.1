# Server Configuration
PORT=3002
NODE_ENV=development

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/invoices_db?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Message Queue (NATS)
NATS_URL=nats://localhost:4222

# External Services
REGISTRY_SERVICE_URL=http://localhost:3001
PAYMENT_SERVICE_URL=http://localhost:3003
DELIVERY_SERVICE_URL=http://localhost:3004

# Accounting Integration
ACCOUNTING_API_URL=https://api.accounting-software.com
ACCOUNTING_API_KEY=your-accounting-api-key

# Payment Providers
STRIPE_SECRET_KEY=sk_test_your_stripe_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_secret

# Security
BCRYPT_SALT_ROUNDS=10
CORS_ORIGIN=http://localhost:3000

# Features
ENABLE_PDF_GENERATION=true
PDF_TEMPLATE_PATH=./templates/invoice.hbs

# Dunning Configuration
DUNNING_ENABLED=true
DUNNING_REMINDER_DAYS=30,45,60

# Logging
LOG_LEVEL=debug
