{
  "name": "collector-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:services": "npm run test --workspaces --if-present",
    "test:registry": "cd services/registry-service && npm test",
    "test:invoices": "cd services/invoices-service && npm test",
    "test:delivery": "cd services/delivery-service && npm test",
    "test:services-coverage": "npm run test:registry -- --coverage && npm run test:invoices -- --coverage && npm run test:delivery -- --coverage",
    "seed:all": "bash scripts/seed-all.sh",
    "seed:offers": "cd services/offers-service && DATABASE_URL='postgresql://collector:collector_dev_pass@localhost:5432/collector_offers_db?schema=public' npm run db:seed",
    "seed:orders": "cd services/orders-service && DATABASE_URL='postgresql://collector:collector_dev_pass@localhost:5432/collector_orders_db?schema=public' npm run db:seed",
    "seed:invoices": "cd services/invoices-service && DATABASE_URL='postgresql://collector:collector_dev_pass@localhost:5432/collector_invoices_db?schema=public' npm run db:seed",
    "seed:delivery": "cd services/delivery-service && DATABASE_URL='postgresql://collector:collector_dev_pass@localhost:5432/collector_delivery_db?schema=public' npm run db:seed",
    "seed:registry": "cd services/registry-service && DATABASE_URL='postgresql://collector:collector_dev_pass@localhost:5432/collector_account_registry_db?schema=public' npm run db:seed",
    "seed:inventory": "cd services/inventory-service && DATABASE_URL='postgresql://collector:collector_dev_pass@localhost:5432/collector_inventory_db?schema=public' npm run db:seed",
    "seed:hr": "cd services/hr-service && DATABASE_URL='postgresql://collector:collector_dev_pass@localhost:5432/collector_hr_db?schema=public' npm run db:seed",
    "seed:projects": "cd services/project-management-service && DATABASE_URL='postgresql://collector:collector_dev_pass@localhost:5432/collector_projects_db?schema=public' npm run db:seed"
  },
